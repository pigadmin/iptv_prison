<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/gallery_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="18dp"
        android:background="@drawable/gallery_left"
        android:visibility="gone" />

    <FrameLayout
        android:layout_width="142dp"
        android:layout_height="107dp"
        android:gravity="center"
        android:padding="2dp">

        <ImageView
            android:id="@+id/gallery_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/gallery_title"
            android:layout_width="118dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/gallery_title_bg"
            android:ellipsize="marquee"
            android:gravity="center"
            android:marqueeRepeatLimit="marquee_forever"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="17sp" />
    </FrameLayout>

    <ImageView
        android:id="@+id/gallery_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="13dp"
        android:background="@drawable/gallery_right"
        android:visibility="gone" />
</LinearLayout>