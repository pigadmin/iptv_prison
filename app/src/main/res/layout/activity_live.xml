<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <VideoView
        android:id="@+id/live_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></VideoView>

    <TextView
        android:id="@+id/live_no_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="44dp"
        android:gravity="center"
        android:maxLength="4"
        android:paddingTop="10dp"
        android:paddingRight="17dp"
        android:singleLine="true"
        android:text="CH"
        android:textColor="@color/white"
        android:textSize="45sp" />

    <LinearLayout
        android:id="@+id/tvlist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="210dp"
            android:layout_height="match_parent"
            android:background="@drawable/left_list_bg2"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/live_count"
                    android:layout_width="wrap_content"
                    android:layout_height="27dp"
                    android:layout_marginLeft="5dp"
                    android:gravity="bottom"
                    android:singleLine="true"
                    android:text="（共82个）"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white"></View>

            <ListView
                android:id="@+id/live_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@drawable/divider_bg"
                android:focusable="false"
                android:listSelector="@drawable/left_list"
                android:scrollbars="none"></ListView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="match_parent"
            android:background="@drawable/left_list_bg2"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/live_count2"
                    android:layout_width="wrap_content"
                    android:layout_height="27dp"
                    android:layout_marginLeft="5dp"
                    android:gravity="bottom"
                    android:singleLine="true"
                    android:text="节目预告"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"></View>

            <ListView
                android:id="@+id/live_list2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@drawable/divider_bg"
                android:focusable="false"
                android:listSelector="@drawable/left_list"
                android:scrollbars="none"></ListView>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>